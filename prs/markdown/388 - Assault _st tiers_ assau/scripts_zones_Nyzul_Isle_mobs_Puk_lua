+-----------------------------------
+--  Mob: Puk
+-- Area: Nyzul Isle
+-----------------------------------
+require("scripts/globals/nyzul")
+-----------------------------------
+
+function onMobSpawn(mob)
+    nyzul.specifiedEnemySet(mob)
+end
+
+function onMobDeath(mob, player, isKiller, firstCall)
+    nyzul.spawnChest(mob)
+    nyzul.specifiedEnemyKill(mob, firstCall)
+end